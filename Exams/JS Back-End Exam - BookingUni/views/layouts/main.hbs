<html lang='en'>

    <head>
        <meta charset='UTF-8' />
        <title>BookingUni</title>
        <link rel='stylesheet' href='/css/style.css' />
    </head>

    <body>

        <div id='container'>

            <div>
                {{#if error}}
                    <div class='notification errorBox'>
                        <span>{{error}}</span>
                    </div>
                {{/if}}
            </div>

            <nav>
                <div class='left-container'>
                    <ul>
                        <li><a href='/'>Home</a></li>
                        {{#if isAuthenticated}}
                            {{! User }}
                            <li><a href='/hotel/create'>Add +</a></li>
                        {{else}}
                            {{! Guest Users }}
                            <li><a href='/auth/login'>Login</a></li>
                            <li><a href='/auth/register'>Register</a></li>
                        {{/if}}
                    </ul>
                </div>
                {{#if isAuthenticated}}
                    <div class='right-container'>
                        <a
                            href='/auth/profile'
                            class='log-out'
                        >{{user.username}}</a>
                        <a href='/auth/logout' class='log-out'>Logout</a>
                    </div>
                {{/if}}
            </nav>

            {{{body}}}

            <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
        </div>

    </body>

</html>